<div class="user-card">
  <div class="user-image">
    <img src="<%= @user.photo %>">
  </div>
  <div class = 'user-info'>
    <a href=<%= "/user/#{@user.id}" %>>  
      <h1>
        <%= @user.name %>
      </h1>  
      <p>
        Number of posts : <%= @user.post_counter %>
      </p>
    </a>
  </div>
</div>

<div class="bio">
  <h3>
    Bio
  </h3>
  <p>
    <%= @user.bio %>
  </p>
</div>

<% @user.post.each do |post| %>
    <a href=<%= "/user/#{@user.id}/post/#{post.id}" %> class="postDiv">
        <h3>
            <%= post.title %>
        </h3>
        <p>
            <%= post.text %>
        </p>
        <p class="likes">
        comments : <%= post.comments_counter %>
        likes : <%= post.likes_counter %>
        </p>

    </a>
<% end %>

<p class="seeBtn">
    <a class="see" href = <%= "/user/#{@user.id}/post" %>>
        See all posts
    </a>
</p>